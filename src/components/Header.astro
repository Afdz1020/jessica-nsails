---
interface Header {
  title?: string;
}

const { title } = Astro.props;
---

<header class="header-container">
  <div class="logo">
    <img src="/images/logo.png" alt="logo" class="image-logo" />
    <h2 class="header-title">Jessica Diaz {title}</h2>
  </div>

  <nav class="navigation">
    <ul>
      <li>
        <a href="/">Inicio</a>
      </li>
      <li>
        <a href="#servicios">Servicios</a>
      </li>
    </ul>
  </nav>

  <style>
    .header-container {
      display: flex;
      height: 100px;
      align-items: center;
      justify-content: space-between;
    }

    .header-container .logo {
      display: flex;
      align-items: center;
    }

    .header-container .navigation {
      position: absolute;
      right: 100px;
    }

    .header-container .navigation ul {
      display: flex;
      list-style: none;
    }

    .navigation ul li {
      margin-left: 2rem;
    }

    .navigation ul li a {
      position: relative;
      text-decoration: none;
      color: #fff;
    }

    .navigation ul li a::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 2px;
      border-radius: 4px;
      background-color: #fff;
      bottom: 0;
      left: 0;
      transform-origin: right;
      transform: scaleX(0);
      transition: transform 0.3s ease-in-out;
    }

    .navigation ul li a:hover::before {
      transform-origin: left;
      transform: scaleX(1);
    }

    .image-logo {
      margin-left: 2rem;
      width: 100px;
      height: 100px;
    }

    @media screen and (max-width: 768px) {
      .header-container {
        width: 100%;
      }

      .header-container .navigation {
        position: absolute;
        left: 350px;
      }
    }
  </style>
</header>

  </main>

  <style>
    .container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .content {
      width: 100%;
    }

    .container-nails-images {
      margin-top: 30px;
    }

    .card-nails-description {
      background-color: #323232;
    }
    .img__description {
      height: 40vh;
      width: 100%;
    }

    .image__banner {
      height: 90vb;
    }

    .container-nails-images .gallery {
      width: 100%;
      margin: auto;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      column-gap: 0.5rem;
      row-gap: 0.5rem;
    }

    .container-prices {
      width: 80%;
      margin-top: 60px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 5px;
      border: 1px solid #fff;
      outline: 1px solid rgb(223, 18, 154);
      outline-offset: -13px;
    }

    .container-prices .title {
      text-align: center;
      margin-bottom: 10px;
      letter-spacing: 3px;
    }

    .container-prices .title-price {
      text-align: center;
      margin-top: 13px;
      font-size: 2.5rem;
      letter-spacing: 5px;
    }

    .container-prices .press-on {
      display: flex;
      justify-content: space-between;
    }

    .press-on .price-press-on {
      margin-right: 22.6rem;
    }

    @media screen and (max-width: 768px) {
      .container-nails-images {
        width: 70vh;
        margin-top: 100px;
      }

      .container-nails-images .gallery {
        grid-template-columns: repeat(3, 1fr);
      }

      .description {
        width: 65vh;
      }

      .container-prices {
        width: 75vh;
        padding-left: 100px;
        margin-left: 500px;
        margin-right: 200px;
      }

      .container-prices .title {
        text-align: center;
        margin-bottom: 5px;
        margin-right: 80px;
      }
      .container-prices .title-price {
        text-align: center;
        margin-top: 10px;
        margin-right: 80px;
      }
      .press-on h3 {
        width: 200px;
      }

      .press-on .price-press-on {
        margin-left: 19.5rem;
      }
    }
  </style>
</Layout>

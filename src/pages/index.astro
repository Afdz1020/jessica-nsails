---
import Layout from '@/layouts/Layout.astro';
import Prices from '@/components/Prices.astro';
import { spaServices } from '@/utils/constants';

const { semipermanente, acrilico, retoques, tradicional, pressOn } =
  spaServices;
---

<Layout title="JDNails">
  <main class="container">
    <section class="content">
      <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="images/banner/banner1.jpeg"
              class="d-block w-100 image__banner"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              src="images/banner/banner2.jpeg"
              class="d-block w-100 image__banner"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              src="images/banner/banner3.jpeg"
              class="d-block w-100 image__banner"
              alt="..."
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <section class="container-nails-images">
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="images/1.jpg"
                class="img-fluid rounded-start img__description"
                alt="..."
              />
            </div>
            <div class="col-md-8 card-nails-description">
              <div class="card-body">
                <h5 class="card-title">Semipermanente</h5>
                <p class="card-text">
                  This is a wider card with supporting text below as a natural
